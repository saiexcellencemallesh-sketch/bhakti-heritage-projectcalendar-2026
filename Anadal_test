        <div id="thought-text" class="thought-bubble">
            ...
        </div>
    </div>

    <script>
        const vishnuImg = document.getElementById('vishnu-img');
        const thoughtText = document.getElementById('thought-text');

        // Story Sequence
        function playAnimationSequence() {
            // Step 1: Initial State (Andal looking in mirror)
            setTimeout(() => {
                thoughtText.innerText = "Andal looks into the mirror...";
                thoughtText.classList.add('visible');
            }, 500);

            // Step 2: The Thought Arrives
            setTimeout(() => {
                thoughtText.style.opacity = '0'; // Quick fade out to change text
                setTimeout(() => {
                    thoughtText.innerText = "Is this Mala for my Lord Vishnu?";
                    thoughtText.style.opacity = '1';
                }, 1000);
            }, 3000);

            // Step 3: The Transformation (Andal fades, Vishnu appears)
            setTimeout(() => {
                vishnuImg.style.opacity = '1'; // Vishnu fades in (covering Andal)
            }, 5000);

            // Step 4: Reset loop (Optional, creates an endless cycle)
            setTimeout(() => {
                // Resetting for loop
                vishnuImg.style.opacity = '0';
                thoughtText.style.opacity = '0';
                setTimeout(playAnimationSequence, 2000); // Restart
            }, 10000);
        }

        // Start the scene
        window.onload = playAnimationSequence;
    </script>

</body>
