            overflow: hidden;
        }

        /* --- The Scene Container --- */
        .scene-container {
            position: relative;
            text-align: center;
            width: 100%;
            max-width: 600px;
        }

        /* --- The Ancient Mirror Frame --- */
        .mirror-frame {
            position: relative;
            width: 300px;
            height: 420px;
            margin: 0 auto;
            /* Arch shape for traditional look */
            border-radius: 150px 150px 20px 20px;
            
            /* Gold/Bronze metallic frame effect */
            border: 12px solid #b8860b;
            box-shadow: 
                0 0 10px #b8860b, 
                inset 0 0 20px #000, 
                0 20px 50px rgba(0,0,0,0.8);
            
            background-color: #111;
            overflow: hidden;
            z-index: 2;
        }

        /* Decorative detail on top of mirror */
        .mirror-frame::before {
            content: '‡•ê';
